<style is:global>
  body {
    background-color: #222;
    color: white;
  }
</style>

<style>
  .grid-container {
    outline: aquamarine solid 1px;
    display: grid;
    gap: 16px;
    padding: 16px;
    grid-template-columns: repeat(auto-fit, minmax(min(10rem, 100%), 1fr));
  }
  .item {
    border: 3px solid coral;
    border-radius: 10px;
    padding: 16px;
    display: inline-grid;
    place-items: center;
  }
</style>
