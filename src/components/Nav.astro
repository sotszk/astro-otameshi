---
const items: { name: string; path: string }[] = [
  {
    name: "HOME",
    path: "/",
  },
  {
    name: "ABOUT",
    path: "/about",
  },
  {
    name: "CONTACT",
    path: "/contact",
  },
  {
    name: "PRIVACY",
    path: "/privacy",
  },
  {
    name: "GRID",
    path: "/grid",
  },
  {
    name: "OPEN PROPS",
    path: "/open_props",
  },
  {
    name: "IMAGE",
    path: "/image",
  },
  {
    name: "POSTCSS",
    path: "/postcss",
  },
];
---

<nav>
  <ul>
    <!-- map 使うのに key は不要っぽい？ -->
    {
      items.map((item) => (
        <li>
          <a href={item.path}>{item.name}</a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    width: 100%;
  }
  ul {
    margin: 0;
    display: grid;
    width: 100%;
    list-style: none;
    gap: 8px;
    grid-template-columns: repeat(auto-fit, minmax(min(10rem, 100%), 1fr));
  }

  li {
    border: 1px solid #000;
  }

  a {
    position: relative;
    z-index: 1;
    display: block;
    text-align: center;
    padding: 8px 16px;
    overflow: hidden;
    background-color: transparent;
  }

  a:hover {
    transition: color 0.2s 0.1s ease;
    color: #f1f1f1;
  }

  a::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transform: translateY(100%);
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgba(51, 51, 51, 0.9);
    transition: transform 0.2s ease;
  }

  a:hover::before {
    transform: translateY(0);
  }
</style>
